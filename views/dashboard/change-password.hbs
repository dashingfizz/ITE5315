{{> header}}

<header class="hero-section py-4 mb-4 text-center text-white">
    <div class="container">
        <h1 class="hero-title mb-2">Change Password</h1>
        <p class="hero-subtitle mb-0">Update your account password</p>
    </div>
</header>

<main class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            
            {{#if success}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{success}}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            {{/if}}
            
            {{#if error}}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{error}}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            {{/if}}
            
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="h4 mb-0">Change Password</h2>
                        <a href="/dashboard" class="btn btn-outline-custom btn-sm">← Back to Dashboard</a>
                    </div>
                    
                    <form method="POST" action="/dashboard/change-password">
                        <div class="mb-3">
                            <label class="form-label">Current Password*</label>
                            <input type="password" name="currentPassword" class="form-control" required>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">New Password*</label>
                            <input type="password" name="newPassword" class="form-control" required minlength="6">
                            <div class="form-text">Must be at least 6 characters long</div>
                        </div>
                        
                        <div class="mb-4">
                            <label class="form-label">Confirm New Password*</label>
                            <input type="password" name="confirmPassword" class="form-control" required minlength="6">
                            <div class="form-text">Re-enter your new password</div>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a href="/dashboard/profile" class="btn btn-outline-custom">
                                ← Edit Profile
                            </a>
                            <button type="submit" class="btn btn-custom">
                                Update Password
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

{{> footer}}