{{! views/user/my-businesses.hbs }}
{{> header}}

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h2 class="h4 mb-1">My Businesses</h2>
          <p class="text-muted mb-0">View, edit, or remove the restaurants you’ve listed near stadiums.</p>
        </div>
        <a href="/user/business/create" class="btn btn-custom">
          + Add New Business
        </a>
      </div>

      <div id="alertContainer"></div>

      <div class="card shadow-sm border-0">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table mb-0 align-middle">
              <thead class="table-light">
                <tr>
                  <th>Business</th>
                  <th>Stadium</th>
                  <th>League / Team</th>
                  <th>Rating</th>
                  <th>City</th>
                  <th style="width: 210px;">Actions</th>
                </tr>
              </thead>
              <tbody id="businessTableBody">
                <tr>
                  <td colspan="6" class="text-center py-4 text-muted">
                    Loading your businesses...
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

{{!-- View Business Modal (read-only) --}}
<div class="modal fade" id="viewBusinessModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Business Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <dl class="row mb-0">
          <dt class="col-sm-3">Name</dt>
          <dd class="col-sm-9" id="viewName"></dd>

          <dt class="col-sm-3">Alias</dt>
          <dd class="col-sm-9" id="viewAlias"></dd>

          <dt class="col-sm-3">Image</dt>
          <dd class="col-sm-9" id="viewImage"></dd>

          <dt class="col-sm-3">League / Team</dt>
          <dd class="col-sm-9" id="viewLeagueTeam"></dd>

          <dt class="col-sm-3">Stadium</dt>
          <dd class="col-sm-9" id="viewStadium"></dd>

          <dt class="col-sm-3">Rating</dt>
          <dd class="col-sm-9" id="viewRating"></dd>

          <dt class="col-sm-3">Reviews</dt>
          <dd class="col-sm-9" id="viewReviews"></dd>

          <dt class="col-sm-3">Price</dt>
          <dd class="col-sm-9" id="viewPrice"></dd>

          <dt class="col-sm-3">Phone</dt>
          <dd class="col-sm-9" id="viewPhone"></dd>

          <dt class="col-sm-3">Website</dt>
          <dd class="col-sm-9" id="viewUrl"></dd>

          <dt class="col-sm-3">Address</dt>
          <dd class="col-sm-9" id="viewAddress"></dd>

          <dt class="col-sm-3">Distance</dt>
          <dd class="col-sm-9" id="viewDistance"></dd>
        </dl>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

{{!-- Edit Business Modal --}}
<div class="modal fade" id="editBusinessModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form id="editBusinessForm" enctype="multipart/form-data">
        <div class="modal-header">
          <h5 class="modal-title">Edit Business</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="editBusinessId" name="businessId">

          <div class="row g-3">

            <div class="col-md-6">
              <label class="form-label fw-bold">Business Name *</label>
              <input type="text" class="form-control" id="editName" name="name" required>
            </div>
            <div class="col-md-6">
              <label class="form-label fw-bold">Alias *</label>
              <input type="text" class="form-control" id="editAlias" name="alias" required>
            </div>

            <div class="col-12">
              <label class="form-label fw-bold">Current Image</label>
              <div id="editImagePreview" class="mb-2"></div>

              <label class="form-label fw-bold">Change Image</label>
              <input type="file" class="form-control" id="editImage" name="image" accept="image/*">
              <div class="form-text">Leave empty to keep current image.</div>
            </div>

            <div class="col-md-4">
              <label class="form-label fw-bold">Rating *</label>
              <input type="number" class="form-control" id="editRating" name="rating" min="0" max="5" step="0.5" required>
            </div>
            <div class="col-md-4">
              <label class="form-label fw-bold">Review Count</label>
              <input type="number" class="form-control" id="editReviewCount" name="review_count" min="0">
            </div>
            <div class="col-md-4">
              <label class="form-label fw-bold">Price</label>
              <select class="form-select" id="editPrice" name="price">
                <option value="">Select price...</option>
                <option value="$">$ - Inexpensive</option>
                <option value="$$">$$ - Moderate</option>
                <option value="$$$">$$$ - Expensive</option>
                <option value="$$$$">$$$$ - Very Expensive</option>
              </select>
            </div>

            <div class="col-md-6">
              <label class="form-label fw-bold">Phone</label>
              <input type="tel" class="form-control" id="editPhone" name="phone">
            </div>
            <div class="col-md-6">
              <label class="form-label fw-bold">Website URL</label>
              <input type="url" class="form-control" id="editUrl" name="url" placeholder="https://">
            </div>

            <div class="col-md-8">
              <label class="form-label fw-bold">Street Address</label>
              <input type="text" class="form-control" id="editAddress1" name="address1">
            </div>
            <div class="col-md-4">
              <label class="form-label fw-bold">Distance (miles)</label>
              <input type="number" class="form-control" id="editDistance" name="distance" step="0.1" min="0">
            </div>

            <div class="col-md-4">
              <label class="form-label fw-bold">City</label>
              <input type="text" class="form-control" id="editCity" disabled>
            </div>

            <div class="col-md-4">
              <label class="form-label fw-bold">State</label>
              <input type="text" class="form-control" id="editState" disabled>
            </div>

            <div class="col-md-4">
              <label class="form-label fw-bold">ZIP Code</label>
              <input type="text" class="form-control" id="editZipCode" name="zip_code">
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-custom">Save Changes</button>
        </div>
      </form>
    </div>
  </div>
</div>

{{> footer}}

<script>
  let businessesCache = [];
  let editModal;
  let viewModal;

  document.addEventListener('DOMContentLoaded', () => {
    const editEl = document.getElementById('editBusinessModal');
    const viewEl = document.getElementById('viewBusinessModal');

    if (editEl && window.bootstrap) editModal = new bootstrap.Modal(editEl);
    if (viewEl && window.bootstrap) viewModal = new bootstrap.Modal(viewEl);

    loadBusinesses();
  });

  async function loadBusinesses() {
    const tbody = document.getElementById('businessTableBody');
    tbody.innerHTML = `
      <tr>
        <td colspan="6" class="text-center py-4 text-muted">
          Loading your businesses...
        </td>
      </tr>
    `;

    try {
      const res = await fetch('/api/business'); // uses getUserBusinesses
      const data = await res.json();

      if (!data.success) {
        showAlert('danger', data.message || 'Unable to load businesses.');
        tbody.innerHTML = `
          <tr>
            <td colspan="6" class="text-center py-4 text-muted">
              No businesses found.
            </td>
          </tr>
        `;
        return;
      }

      businessesCache = data.businesses || [];

      if (businessesCache.length === 0) {
        tbody.innerHTML = `
          <tr>
            <td colspan="6" class="text-center py-4 text-muted">
              You have not added any businesses yet.
            </td>
          </tr>
        `;
        return;
      }

      tbody.innerHTML = '';
      businessesCache.forEach((b) => {
        const tr = document.createElement('tr');
        tr.dataset.id = b.id;

        // thumbnail if image exists
        let thumbHtml = '';
        if (b.image_url) {
          thumbHtml = `
            <div class="mb-2">
              <img
                src="${escapeHtml(b.image_url)}"
                alt="${escapeHtml(b.name || 'Business thumbnail')}"
                class="img-thumbnail"
                style="width: 60px; height: 60px; object-fit: cover;"
              >
            </div>
          `;
        }

        tr.innerHTML = `
          <td>
            ${thumbHtml}
            <div class="fw-semibold">${escapeHtml(b.name || '')}</div>
            <div class="text-muted small">${escapeHtml(b.alias || '')}</div>
          </td>
          <td>
            <div class="fw-semibold">${escapeHtml(b.stadiumName || '')}</div>
          </td>
          <td>
            <div>${escapeHtml(b.league || '')}</div>
            <div class="text-muted small">${escapeHtml(b.team || '')}</div>
          </td>
          <td>
            ${b.rating ? (b.rating.toFixed ? b.rating.toFixed(1) : b.rating) : 'N/A'}
          </td>
          <td>
            ${escapeHtml(b.city || '')}, ${escapeHtml(b.state || '')}
          </td>
          <td>
            <button class="btn btn-sm btn-outline-secondary me-1" onclick="openViewModal('${b.id}')">
              View
            </button>
            <button class="btn btn-sm btn-outline-primary me-1" onclick="openEditModal('${b.id}')">
              Edit
            </button>
            <button class="btn btn-sm btn-outline-danger" onclick="deleteBusiness('${b.id}')">
              Delete
            </button>
          </td>
        `;
        tbody.appendChild(tr);
      });

    } catch (err) {
      console.error('Error loading businesses:', err);
      showAlert('danger', 'Network error while loading businesses.');
      tbody.innerHTML = `
        <tr>
          <td colspan="6" class="text-center py-4 text-muted">
            Unable to load businesses right now.
          </td>
        </tr>
      `;
    }
  }

  // VIEW MODAL
  window.openViewModal = function (id) {
    const biz = businessesCache.find(b => b.id === id);
    if (!biz || !viewModal) return;

    const name = biz.name || '';
    const alias = biz.alias || '';
    const league = biz.league || '';
    const team = biz.team || '';
    const stadium = biz.stadiumName || '';
    const rating = biz.rating ? (biz.rating.toFixed ? biz.rating.toFixed(1) : biz.rating) : 'N/A';
    const reviews = biz.review_count != null ? biz.review_count : 'N/A';
    const price = biz.price || 'N/A';
    const phone = biz.phone || 'N/A';
    const url = biz.url || '';
    const imageUrl = biz.image_url || '';
    const distance = biz.distance ? `${biz.distance} miles` : 'N/A';

    const address1 = biz.location && biz.location.address1 ? biz.location.address1 : '';
    const city = biz.city || (biz.location && biz.location.city) || '';
    const state = biz.state || (biz.location && biz.location.state) || '';
    const zip = biz.location && biz.location.zip_code ? biz.location.zip_code : '';

    document.getElementById('viewName').textContent = name;
    document.getElementById('viewAlias').textContent = alias;
    document.getElementById('viewLeagueTeam').textContent = `${league} — ${team}`;
    document.getElementById('viewStadium').textContent = stadium;
    document.getElementById('viewRating').textContent = rating;
    document.getElementById('viewReviews').textContent = reviews;
    document.getElementById('viewPrice').textContent = price;
    document.getElementById('viewPhone').textContent = phone;

    const imgContainer = document.getElementById('viewImage');
    if (imageUrl) {
      imgContainer.innerHTML = `
        <img
          src="${escapeHtml(imageUrl)}"
          alt="${escapeHtml(name || 'Business image')}"
          class="img-fluid rounded border"
          style="max-height: 200px; object-fit: cover;"
        >
      `;
    } else {
      imgContainer.textContent = 'No image uploaded';
    }

    const urlElem = document.getElementById('viewUrl');
    if (url) {
      urlElem.innerHTML = `<a href="${escapeHtml(url)}" target="_blank" rel="noopener noreferrer">${escapeHtml(url)}</a>`;
    } else {
      urlElem.textContent = 'N/A';
    }

    document.getElementById('viewAddress').textContent =
      [address1, `${city}${city && state ? ', ' : ''}${state} ${zip}`.trim()].filter(Boolean).join(' | ');

    document.getElementById('viewDistance').textContent = distance;

    viewModal.show();
  };

  // EDIT MODAL
  window.openEditModal = function (id) {
    const biz = businessesCache.find(b => b.id === id);
    if (!biz || !editModal) return;

    const preview = document.getElementById('editImagePreview');
    if (biz.image_url) {
      preview.innerHTML = `
        <img
          src="${escapeHtml(biz.image_url)}"
          alt="${escapeHtml(biz.name || 'Business image')}"
          class="img-thumbnail mb-2"
          style="width: 80px; height: 80px; object-fit: cover;"
        >
      `;
    } else {
      preview.textContent = 'No image uploaded';
    }

    document.getElementById('editBusinessId').value = biz.id;
    document.getElementById('editName').value = biz.name || '';
    document.getElementById('editAlias').value = biz.alias || '';
    document.getElementById('editRating').value = biz.rating || '';
    document.getElementById('editReviewCount').value = biz.review_count || 0;
    document.getElementById('editPrice').value = biz.price || '';
    document.getElementById('editPhone').value = biz.phone || '';
    document.getElementById('editUrl').value = biz.url || '';
    document.getElementById('editAddress1').value = (biz.location && biz.location.address1) || '';
    document.getElementById('editDistance').value = biz.distance || 0;
    document.getElementById('editCity').value = biz.city || (biz.location && biz.location.city) || '';
    document.getElementById('editState').value = biz.state || (biz.location && biz.location.state) || '';
    document.getElementById('editZipCode').value = (biz.location && biz.location.zip_code) || '';

    editModal.show();
  };

  // EDIT SUBMIT
  document.getElementById('editBusinessForm').addEventListener('submit', async (e) => {
    e.preventDefault();

    const id = document.getElementById('editBusinessId').value.trim();
    const name = document.getElementById('editName').value.trim();
    const alias = document.getElementById('editAlias').value.trim();
    const rating = parseFloat(document.getElementById('editRating').value);

    if (!name || !alias || isNaN(rating) || rating < 0 || rating > 5) {
      showAlert('warning', 'Please provide a valid name, alias, and rating between 0 and 5.');
      return;
    }

    const form = e.target;
    const formData = new FormData(form);

    try {
      const res = await fetch(`/api/business/update/${encodeURIComponent(id)}`, {
        method: 'PUT',
        body: formData
      });

      const data = await res.json();
      if (!data.success) {
        showAlert('danger', data.message || 'Failed to update business.');
        return;
      }

      showAlert('success', 'Business updated successfully.');
      editModal.hide();
      loadBusinesses();
    } catch (err) {
      console.error('Error updating business:', err);
      showAlert('danger', 'Network error while updating business.');
    }
  });

  // DELETE
  window.deleteBusiness = async function (id) {
    if (!confirm('Are you sure you want to delete this business? This action cannot be undone.')) {
      return;
    }

    try {
      const res = await fetch(`/api/business/delete/${encodeURIComponent(id)}`, {
        method: 'DELETE'
      });
      const data = await res.json();

      if (!data.success) {
        showAlert('danger', data.message || 'Failed to delete business.');
        return;
      }

      showAlert('success', 'Business deleted successfully.');
      loadBusinesses();
    } catch (err) {
      console.error('Error deleting business:', err);
      showAlert('danger', 'Network error while deleting business.');
    }
  };

  function showAlert(type, message) {
    const container = document.getElementById('alertContainer');
    const div = document.createElement('div');
    div.className = `alert alert-${type} alert-dismissible fade show`;
    div.innerHTML = `
      ${escapeHtml(message)}
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    `;
    container.appendChild(div);
    setTimeout(() => {
      div.classList.remove('show');
      div.addEventListener('transitionend', () => div.remove());
    }, 4000);
  }

  function escapeHtml(str) {
    return String(str)
      .replace(/&/g, '&amp;')
      .replace(/</g, '&lt;')
      .replace(/>/g, '&gt;')
      .replace(/"/g, '&quot;')
      .replace(/'/g, '&#039;');
  }
</script>
